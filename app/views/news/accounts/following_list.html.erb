<div class="follow-list">
  <h3>添加我的关注</h3>
  <%= link_to '返回', news_accounts_mine_path, class: "pull-right btn btn-primary back-button" %>
  <% if flash[:alert] %>
    <div class="alert alert-success"><%= flash[:alert] %></div>
  <% end %>
  <% @big_hash.each do |k,v| %>
    <h3><%= k.to_s %></h3>
    <ul class="list-unstyled">
      <% v.each do |v0| %>
        <li class="follow-item">
          <%= v0[:name] %>
          <% if v0[:has_followed] %>
            <a href="<%= news_accounts_delete_follow_path(disease_info_type_id: v0[:id]) %>" class="badge">取消关注</a>
          <% else %>
            <a href="<%= news_accounts_follow_path(disease_info_type_id: v0[:id]) %>" class="badge">添加</a>
          <% end %>
        </li>
      <% end %>
    </ul>
    <hr>
  <% end %>
</div>
